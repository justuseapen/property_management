<h1>Listing buildings</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td>
        <%= link_to "#{building.street_address}, #{building.city}", building_path(building) %>
        </td>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Destroy Building', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

